<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@style/MyActivityAnim</item>
    
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  
  <style name="MyActivityAnim">
    <item name="android:windowEnterAnimation">@null</item>
    <item name="android:windowExitAnimation">@null</item>
  </style>

  
  <style name="AppTabLayout" parent="Widget.Design.TabLayout">
    <item name="tabBackground">@drawable/tab_background</item>
    <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    <item name="tabIndicatorHeight">4dp</item>
    <item name="tabSelectedTextColor">#222</item>
    <item name="tabPaddingStart">2dp</item>
    <item name="tabPaddingEnd">2dp</item>
    <item name="tabGravity">fill</item>
    <item name="tabMode">fixed</item>
    <item name="tabMaxWidth">0dp</item>
  </style>
  
  <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">15dp</item>
    <item name="android:textColor">#888</item>
    <item name="textAllCaps">true</item>
  </style>
  
  
  <!-- === -->
  
  <style name="buttonStyle" parent="android:style/Widget.Button">
    <!-- <item name="android:layout_width">150dp</item> -->
    <!-- <item name="android:layout_height">50dp</item> -->
    <item name="android:layout_marginLeft">2dp</item>
    <item name="android:layout_marginRight">2dp</item>
    <!-- <item name="android:paddingLeft">2dp</item> -->
    <!-- <item name="android:paddingRight">2dp</item> -->
    <item name="android:textColor">#444</item>
    <item name="android:background">@drawable/button_selector</item>
    <!-- <item name="android:padding">@dimen/padding</item> -->
    <item name="android:textSize">18dp</item>
  </style>

  <style name="buttonStyleConfig" parent="@style/buttonStyle">
    <item name="android:background">@drawable/button_selector_config</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:textColor">#666</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="buttonStyleNum" parent="@style/buttonStyle">
    <item name="android:textSize">22dp</item>
    <item name="android:background">@drawable/button_selector_action</item>
  </style>
  
  <style name="buttonStyleAction" parent="@style/buttonStyle">
    <item name="android:background">@drawable/button_selector_action</item>
  </style>
  
  <style name="buttonStyleNav" parent="@style/buttonStyle">
    <item name="android:background">@drawable/button_selector_nav</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="buttonStyleSystem" parent="@style/buttonStyle">
    <item name="android:background">@drawable/button_selector_sys</item>
  </style>

</resources>
